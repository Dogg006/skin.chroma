<?xml version="1.0" encoding="utf-8"?>
<window type="buttonmenu" id="111">
    <defaultcontrol always="true">9009</defaultcontrol>
    <onload condition="!IntegerGreaterThan(Container(9009).NumItems,0)">close</onload>
    <zorder>11</zorder>
    <controls>
        <include>DimBG</include>
        <control type="group">
            <include>DialogOpenClose</include>
            <control type="group">
                <animation effect="slide" time="0" start="0,0" end="0,-200" condition="IntegerGreaterThan(Container(9009).NumItems,0)+!IntegerGreaterThan(Container(9009).NumItems,1)">conditional</animation>
                <animation effect="slide" time="0" start="0,0" end="0,-250" condition="IntegerGreaterThan(Container(9009).NumItems,1)+!IntegerGreaterThan(Container(9009).NumItems,2)">conditional</animation>
                <animation effect="slide" time="0" start="0,0" end="0,-300" condition="IntegerGreaterThan(Container(9009).NumItems,2)+!IntegerGreaterThan(Container(9009).NumItems,3)">conditional</animation>
                <animation effect="slide" time="0" start="0,0" end="0,-350" condition="IntegerGreaterThan(Container(9009).NumItems,3)+!IntegerGreaterThan(Container(9009).NumItems,4)">conditional</animation>
                <animation effect="slide" time="0" start="0,0" end="0,-400" condition="IntegerGreaterThan(Container(9009).NumItems,4)+!IntegerGreaterThan(Container(9009).NumItems,5)">conditional</animation>
                <animation effect="slide" time="0" start="0,0" end="0,-450" condition="IntegerGreaterThan(Container(9009).NumItems,5)+!IntegerGreaterThan(Container(9009).NumItems,6)">conditional</animation>
                <animation effect="slide" time="0" start="0,0" end="0,-500" condition="IntegerGreaterThan(Container(9009).NumItems,6)+!IntegerGreaterThan(Container(9009).NumItems,7)">conditional</animation>
                <animation effect="slide" time="0" start="0,0" end="0,-550" condition="IntegerGreaterThan(Container(9009).NumItems,7)+!IntegerGreaterThan(Container(9009).NumItems,8)">conditional</animation>
                <animation effect="slide" time="0" start="0,0" end="0,-600" condition="IntegerGreaterThan(Container(9009).NumItems,8)+!IntegerGreaterThan(Container(9009).NumItems,9)">conditional</animation>
                <control type="image">
                    <posx>460</posx>
                    <posy>1080</posy>
                    <width>1000</width>
                    <height>1080</height>
                    <!--<include>DialogTransparency</include>-->
                    <texture border="50">$VAR[Theme.Color]/common/background_menu.png</texture>
                </control>
                <include name="WindowClosingButton">
                    <param name="id" value="9010"/>
                    <param name="x" value="1410"/>
                    <param name="y" value="1080"/>
                    <param name="onleft" value="9009"/>
                </include>
                <control type="panel" id="9009">
                    <posx>510</posx>
                    <posy>1180</posy>
                    <width>900</width>
                    <height>400</height>
                    <onleft>9009</onleft>
                    <onright>9010</onright>
                    <onup>9009</onup>
                    <ondown>9009</ondown>
                    <itemlayout height="50" width="900">
                        <control type="label">
                            <posx>150</posx>
                            <height>50</height>
                            <width>700</width>
                            <font>FacadeListMainFont</font>
                            <textcolor>NoFocusedColor</textcolor>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                        <control type="image">
                            <posx>TextMargin</posx>
                            <posy>0</posy>
                            <width>50</width>
                            <height>50</height>
                            <aspectratio>keep</aspectratio>
                            <info>ListItem.Thumb</info>
                        </control>
                    </itemlayout>
                    <focusedlayout height="50" width="900">
                        <control type="group">
                            <include>ButtonWideFocusAnimation</include>
                            <control type="image">
                                <posx>0</posx>
                                <posy>0</posy>
                                <height>50</height>
                                <width>900</width>
                                <texture border="1">$VAR[Theme.Color]/list/bg_facade_focus.png</texture>
                            </control>
                            <control type="label">
                                <posx>150</posx>
                                <height>50</height>
                                <width>700</width>
                                <font>FacadeListMainFont</font>
                                <include>TextColor_MainColor</include>
                                <label>$INFO[ListItem.Label]</label>
                            </control>
                            <control type="image">
                                <posx>TextMargin</posx>
                                <posy>0</posy>
                                <width>50</width>
                                <height>50</height>
                                <aspectratio>keep</aspectratio>
                                <info>ListItem.ActualIcon</info>
                            </control>
                        </control>
                    </focusedlayout>
                    <content>
                        <item id="8">
                            <visible>System.HasLoginScreen | IntegerGreaterThan(System.ProfileCount,1)</visible>
                            <visible>System.Loggedon</visible>
                            <onclick>dialog.close(all,true)</onclick>
                            <onclick>System.LogOff</onclick>
                            <label>$LOCALIZE[20126]</label>
                            <thumb>$VAR[Theme.Color]/topbar/topbar_logout_nofocus.png</thumb>
                            <icon>$VAR[Theme.Color]/topbar/topbar_logout_focus.png</icon>
                        </item>
                        <item id="9">
                            <visible>System.HasLocks + System.IsMaster</visible>
                            <onclick>mastermode</onclick>
                            <label>$LOCALIZE[20046]</label>
                            <thumb>$VAR[Theme.Color]/topbar/topbar_master_nofocus.png</thumb>
                            <icon>$VAR[Theme.Color]/topbar/topbar_master_focus.png</icon>
                        </item>
                        <item id="9">
                            <visible>System.HasLocks + !System.IsMaster</visible>
                            <onclick>mastermode</onclick>
                            <label>$LOCALIZE[20045]</label>
                            <thumb>$VAR[Theme.Color]/topbar/topbar_nomaster_nofocus.png</thumb>
                            <icon>$VAR[Theme.Color]/topbar/topbar_nomaster_focus.png</icon>
                        </item>
                        <item id="11">
                            <visible>!Skin.HasSetting(QuitMenu_Hide_Quit)</visible>
                            <onclick>dialog.close(all,true)</onclick>
                            <onclick>XBMC.Quit()</onclick>
                            <label>$LOCALIZE[13009]</label>
                            <thumb>$VAR[Theme.Color]/topbar/topbar_exit_nofocus.png</thumb>
                            <icon>$VAR[Theme.Color]/topbar/topbar_exit_focus.png</icon>
                        </item>
                        <item id="12">
                            <visible>!Skin.HasSetting(QuitMenu_Hide_Sleep)</visible>
                            <visible>System.CanSuspend</visible>
                            <onclick>dialog.close(all,true)</onclick>
                            <onclick>XBMC.Suspend()</onclick>
                            <label>$LOCALIZE[13011]</label>
                            <thumb>$VAR[Theme.Color]/topbar/topbar_sleep_nofocus.png</thumb>
                            <icon>$VAR[Theme.Color]/topbar/topbar_sleep_focus.png</icon>
                        </item>
                        <item id="15">
                            <visible>!Skin.HasSetting(QuitMenu_Hide_Shutdown)</visible>
                            <visible>System.CanPowerDown</visible>
                            <onclick>dialog.close(all,true)</onclick>
                            <onclick>XBMC.Powerdown()</onclick>
                            <label>$LOCALIZE[13005]</label>
                            <thumb>$VAR[Theme.Color]/topbar/topbar_shutdown_nofocus.png</thumb>
                            <icon>$VAR[Theme.Color]/topbar/topbar_shutdown_focus.png</icon>
                        </item>
                        <item id="14">
                            <visible>!Skin.HasSetting(QuitMenu_Hide_Reboot)</visible>
                            <visible>System.CanReboot</visible>
                            <onclick>dialog.close(all,true)</onclick>
                            <onclick>XBMC.Reset()</onclick>
                            <label>$LOCALIZE[13013]</label>
                            <thumb>$VAR[Theme.Color]/topbar/topbar_restart_nofocus.png</thumb>
                            <icon>$VAR[Theme.Color]/topbar/topbar_restart_focus.png</icon>
                        </item>
                        <item id="16">
                            <onclick>dialog.close(all,true)</onclick>
                            <onclick>ActivateWindow(Settings,return)</onclick>
                            <label>$LOCALIZE[5]</label>
                            <thumb>$VAR[Theme.Color]/topbar/topbar_settings_nofocus.png</thumb>
                            <icon>$VAR[Theme.Color]/topbar/topbar_settings_focus.png</icon>
                        </item>
                        <item id="17">
                            <visible>!System.HasAlarm(shutdowntimer)</visible>
                            <visible>Skin.HasSetting(QuitMenu_Hide_Timer)</visible>
                            <visible>System.CanPowerDown | System.CanSuspend | System.CanHibernate</visible>
                            <onclick>dialog.close(all,true)</onclick>
                            <onclick>XBMC.AlarmClock(shutdowntimer,XBMC.Shutdown())</onclick>
                            <label>$LOCALIZE[20144]</label>
                            <thumb>$VAR[Theme.Color]/topbar/topbar_epg_nofocus.png</thumb>
                            <icon>$VAR[Theme.Color]/topbar/topbar_epg_focus.png</icon>
                        </item>
                        <item id="18">
                            <visible>Skin.HasSetting(QuitMenu_Hide_Timer)</visible>
                            <visible>System.HasAlarm(shutdowntimer)</visible>
                            <onclick>CancelAlarm(shutdowntimer)</onclick>
                            <label>$LOCALIZE[20151]: $INFO[System.Alarmpos]</label>
                            <thumb>$VAR[Theme.Color]/topbar/topbar_epg_nofocus.png</thumb>
                            <icon>$VAR[Theme.Color]/topbar/topbar_epg_focus.png</icon>
                        </item>
                        <item id="19">
                            <visible>System.HasShutdown +!System.IsInhibit</visible>
                            <onclick>InhibitIdleShutdown(true)</onclick>
                            <label>$LOCALIZE[13017]</label>
                            <thumb>$VAR[Theme.Color]/topbar/topbar_pause_nofocus.png</thumb>
                            <icon>$VAR[Theme.Color]/topbar/topbar_pause_focus.png</icon>
                        </item>
                        <item id="20">
                            <visible>System.HasShutdown + System.IsInhibit</visible>
                            <onclick>InhibitIdleShutdown(false)</onclick>
                            <label>$LOCALIZE[13018]</label>
                            <thumb>$VAR[Theme.Color]/topbar/topbar_play_nofocus.png</thumb>
                            <icon>$VAR[Theme.Color]/topbar/topbar_play_focus.png</icon>
                        </item>
                    </content>
                </control>
            </control>
        </control>
    </controls>
</window>
