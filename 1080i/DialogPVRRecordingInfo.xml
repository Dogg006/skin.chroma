<?xml version="1.0" encoding="utf-8"?>
<window type="dialog">
    <defaultcontrol always="true">10</defaultcontrol>
    <controls>
        <include>DimBG</include>
        <control type="group">
            <include>DialogOpenClose</include>
            <control type="image">
                <posx>0</posx>
                <posy>140</posy>
                <width>1920</width>
                <height>1080</height>
                <!--<include>DialogTransparency</include>-->
                <colordiffuse>$VAR[Picked.Theme.Color]</colordiffuse>
                <texture border="50">common/background_menu.png</texture>
            </control>
            <include name="WindowClosingButton">
                <param name="id" value="99010"/>
                <param name="x" value="1870"/>
                <param name="y" value="140"/>
                <param name="onleft" value="6060"/>
            </include>
            <control type="image">
                <posx>530</posx>
                <posy>190</posy>
                <width>480</width>
                <height>900</height>
                <texture border="1">common/background_strip_horizontal_right.png</texture>
            </control>
            <control type="image">
                <posx>530r</posx>
                <posy>190</posy>
                <width>480</width>
                <height>900</height>
                <texture border="1">common/background_strip_horizontal_right.png</texture>
            </control>
            <!-- SIDE MENU -->
            <control type="group">
                <posy>240</posy>
                <control type="grouplist" id="9000">
                    <posy>0</posy>
                    <height>800</height>
                    <include>DialogMenuButtonGroup</include>
                    <ondown>9000</ondown>
                    <onright>9060</onright>
                    <control type="button" id="122">
                        <label>Extended Info</label>
                        <visible>System.HasAddon(script.extendedinfo)</visible>
                        <onclick>Action(Close)</onclick>
                        <onclick>dialog.close(all,true)</onclick>
                        <onclick>RunScript(script.extendedinfo,info=extendedinfo,name=$INFO[ListItem.Title])</onclick>
                        <include>DialogMenuButton</include>
                    </control>
                    <control type="button" id="10">
                        <label>$LOCALIZE[186]</label>
                        <include>DialogMenuButton</include>
                    </control>
                </control>
                <include name="DialogMenuScroller">
                    <param name="y" value="0"/>
                    <param name="height" value="800"/>
                    <param name="onright" value="6060"/>
                    <param name="onleft" value="9000"/>
                </include>
            </control>
            <control type="group">
                <posx>530</posx>
                <posy>240</posy>
                <control type="label">
                    <posx>TextMargin</posx>
                    <posy>0</posy>
                    <width>760</width>
                    <height>50</height>
                    <font>InfoTitleFont</font>
                    <include>TextColor_MainColor</include>
                    <scroll>true</scroll>
                    <label>$INFO[ListItem.Title]</label>
                </control>
                <control type="label">
                    <posx>TextMargin</posx>
                    <posy>50</posy>
                    <width>760</width>
                    <height>35</height>
                    <font>InfoTitleSubFont</font>
                    <include>TextColor_MidColor</include>
                    <label>$LOCALIZE[207]</label>
                </control>
                <control type="textbox">
                    <posx>TextMargin</posx>
                    <posy>100</posy>
                    <width>760</width>
                    <height>680</height>
                    <font>InfoDetailsFontBig</font>
                    <textcolor>AlternateColor</textcolor>
                    <label>$VAR[Plots]</label>
                    <pagecontrol>6060</pagecontrol>
                </control>
                <control type="scrollbar" id="6060">
                    <visible>Skin.HasSetting(ManualScroll)</visible>
                    <posx>810</posx>
                    <posy>100</posy>
                    <height>680</height>
                    <include>VerticalScroller</include>
                    <onleft>9060</onleft>
                </control>
                <control type="group">
                    <posx>910</posx>
                    <posy>0</posy>
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>380</width>
                        <height>285</height>
                        <texture background="true">$VAR[Thumbs]</texture>
                        <aspectratio aligny="top">keep</aspectratio>
                    </control>
                    <control type="group">
                        <posx>0</posx>
                        <posy>320</posy>
                        <control type="label">
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>380</width>
                            <height>50</height>
                            <font>InfoDetailsFont</font>
                            <include>TextColor_MainColor</include>
                            <scroll>true</scroll>
                            <label>$VAR[DetailsRow1]</label>
                        </control>
                        <control type="label">
                            <posx>0</posx>
                            <posy>65</posy>
                            <width>380</width>
                            <height>50</height>
                            <font>InfoDetailsFont</font>
                            <textcolor>AlternateColor</textcolor>
                            <scroll>false</scroll>
                            <label>$VAR[DetailsRow2]</label>
                        </control>
                        <control type="label">
                            <posx>0</posx>
                            <posy>130</posy>
                            <width>380</width>
                            <height>50</height>
                            <font>InfoDetailsFont</font>
                            <include>TextColor_MainColor</include>
                            <scroll>false</scroll>
                            <label>$VAR[DetailsRow3]</label>
                        </control>
                        <control type="label">
                            <posx>0</posx>
                            <posy>195</posy>
                            <width>380</width>
                            <height>50</height>
                            <font>InfoDetailsFont</font>
                            <textcolor>AlternateColor</textcolor>
                            <scroll>false</scroll>
                            <label>$VAR[DetailsRow4]</label>
                        </control>
                    </control>
                </control>
            </control>
        </control>
    </controls>
</window>
