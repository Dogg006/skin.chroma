<?xml version="1.0" encoding="utf-8"?>
<window type="dialog">
    <controls>
        <control type="group">
            <include>TopDialogVisibleFadeEffect</include>
            <include>OverlayTopOSDDialog</include>
            <control type="image">
                <posx>0</posx>
                <posy>-5</posy>
                <width>1920</width>
                <height>200</height>
                <texture border="65">common/background_strip_horizontal_text.png</texture>
            </control>
            <include name="ProgressBar">
                <param name="id" value="10"/>
                <param name="visible" value="true"/>
                <param name="x" value="0"/>
                <param name="y" value="50"/>
                <param name="width" value="1920"/>
                <param name="height" value="90"/>
                <param name="texturebg" value="common/osd_progress_dummy.png"/>
                <param name="gfx" value="OSD/osd_progress.png"/>
                <param name="border" value="1,1,1,1"/>
                <param name="info" value="-"/>
            </include>
            <control type="label" id="1">
                <visible>IntegerGreaterThan(Control.GetLabel(10), 0)</visible>
                <posx>TextMargin</posx>
                <posy>50</posy>
                <height>90</height>
                <width>1820</width>
                <scroll>true</scroll>
                <align>center</align>
                <font>NotificationFont</font>
                <include>TextColor_AlternateColor</include>
                <label>$LOCALIZE[31979]$INFO[Control.GetLabel(10), ,%]</label>
            </control>
            <control type="label">
                <visible>!IntegerGreaterThan(Control.GetLabel(10), 0)</visible>
                <posx>TextMargin</posx>
                <posy>50</posy>
                <height>90</height>
                <width>1820</width>
                <scroll>true</scroll>
                <align>center</align>
                <font>NotificationFont</font>
                <include>TextColor_AlternateColor</include>
                <label>$LOCALIZE[31979]</label>
            </control>
        </control>
    </controls>
</window>
