<?xml version="1.0" encoding="utf-8"?>
<window>
    <defaultcontrol always="true">50</defaultcontrol>
    <controls>
        <include>Fanart_Art</include>
        <include>Player_Show</include>
        <include>OverlayFull</include>
        <include>FooterInfo</include>
        <control type="group">
            <animation effect="slide" tween="circle" easing="out" time="250" start="0,0" end="-2200,0" condition="Control.HasFocus(505050)">conditional</animation>
            <include>NowPlayingSlideEffect</include>
            <include>OpenClose</include>
            <control type="image">
                <posx>0</posx>
                <posy>280</posy>
                <width>1920</width>
                <height>800</height>
                <texture border="51">common/background_strip_horizontal.png</texture>
            </control>
            <control type="image">
                <posx>0</posx>
                <posy>330</posy>
                <width>50</width>
                <height>700</height>
                <texture border="1">common/background_strip_horizontal_left.png</texture>
            </control>
            <control type="image">
                <posx>1440</posx>
                <posy>330</posy>
                <width>480</width>
                <height>700</height>
                <texture border="1">common/background_strip_horizontal_right.png</texture>
            </control>
            <control type="panel" id="50">
                <posx>TextMargin</posx>
                <posy>380</posy>
                <width>1390</width>
                <height>600</height>
                <pagecontrol>60</pagecontrol>
                <onleft>9000</onleft>
                <onright>60</onright>
                <itemlayout height="50" width="1390">
                    <control type="label">
                        <posx>TextMargin</posx>
                        <height>50</height>
                        <width>1290</width>
                        <font>FacadeListMainFont</font>
                        <textcolor>NoFocusedColor</textcolor>
                        <label>$INFO[ListItem.Duration,, $LOCALIZE[31297]  -  ]$INFO[ListItem.Label]</label>
                    </control>
                </itemlayout>
                <focusedlayout height="50" width="1390">
                    <control type="group">
                        <include>ButtonWideFocusAnimation</include>
                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <height>50</height>
                            <width>1390</width>
                            <texture border="1">$VAR[Theme.Color]/list/bg_facade_focus.png</texture>
                        </control>
                        <control type="label">
                            <posx>TextMargin</posx>
                            <height>50</height>
                            <width>1290</width>
                            <font>FacadeListMainFont</font>
                            <include>TextColor_MainColor</include>
                            <scroll>true</scroll>
                            <label>$INFO[ListItem.Duration,, $LOCALIZE[31297]  -  ]$INFO[ListItem.Label]</label>
                        </control>
                    </control>
                </focusedlayout>
            </control>
            <control type="scrollbar" id="60">
                <posx>1390</posx>
                <posy>380</posy>
                <height>600</height>
                <include>VerticalScroller</include>
                <onleft>50</onleft>
                <onright>60</onright>
            </control>
            <control type="group">
                <posx>1490</posx>
                <posy>380</posy>
                <control type="group">
                    <!-- CDART VIDEO -->
                    <visible>!Skin.HasSetting(plexbmc)</visible>
                    <visible>Skin.HasSetting(EnableCdArt)+!IsEmpty(ListItem.Thumb)</visible>
                    <control type="image">
                        <posx>30</posx>
                        <posy>350</posy>
                        <width>320</width>
                        <height>320</height>
                        <texture background="true" diffuse="common/cdart_diffuse.png">$INFO[ListItem.Art(discart)]</texture>
                        <aspectratio align="center" aligny="center">keep</aspectratio>
                        <include>Animation_ViewsCDart</include>
                    </control>
                    <control type="image">
                        <posx>20</posx>
                        <posy>510</posy>
                        <width>340</width>
                        <height>25</height>
                        <texture flipy="true" border="25,0,25,0">common/cover_shadow.png</texture>
                    </control>
                </control>
                <control type="image">
                    <posx>20</posx>
                    <posy>0</posy>
                    <width>340</width>
                    <height>510</height>
                    <aspectratio aligny="top">scale</aspectratio>
                    <texture background="true">$VAR[Thumbs]</texture>
                </control>
            </control>
        </control>
        <control type="label">
            <include>WindowTitle</include>
            <label>$VAR[GlobalSubTitles]</label>
        </control>
        <control type="label">
            <include>WindowTitleSub</include>
            <label>$INFO[Container.NumItems,, $LOCALIZE[31025]]$INFO[Container.CurrentPage,  -  ]$INFO[Container.NumPages,/]</label>
        </control>
        <include>Header_Logo</include>
        <include>Time</include>
        <include>NowPlaying</include>
        <include>TopBar</include>
        <!-- SIDE MENU -->
        <control type="group">
            <visible>!Skin.HasSetting(EnableKioskMode)</visible>
            <include>Icon_Fade</include>
            <include>LeftMenu</include>
            <control type="grouplist" id="9000">
                <include>LeftMenuButtonGroup</include>
                <onleft>50</onleft>
                <ondown>9000</ondown>
                <onback>50</onback>
                <control type="label" id="7965">
                    <include>LeftMenuTitleLabel</include>
                    <label>$LOCALIZE[33061]</label>
                </control>
                <control type="radiobutton" id="20">
                    <include>LeftMenuButton</include>
                    <label>$LOCALIZE[191]</label>
                </control>
                <control type="button" id="21">
                    <include>LeftMenuButton</include>
                    <label>$LOCALIZE[190]</label>
                </control>
                <control type="button" id="22">
                    <include>LeftMenuButton</include>
                    <label>$LOCALIZE[192]</label>
                </control>
                <control type="button" id="26">
                    <include>LeftMenuButton</include>
                    <label>$LOCALIZE[486]</label>
                </control>
                <control type="button" id="3">
                    <include>LeftMenuButton</include>
                </control>
                <control type="togglebutton" id="4">
                    <include>LeftMenuButton</include>
                    <label>$LOCALIZE[21429]:  $LOCALIZE[21430]</label>
                    <altlabel>$LOCALIZE[21429]:  $LOCALIZE[21431]</altlabel>
                </control>
            </control>
            <include>LeftMenuScroller</include>
        </control>
    </controls>
</window>
