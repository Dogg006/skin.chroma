<?xml version="1.0" encoding="utf-8"?>
<window>
    <defaultcontrol always="true">450</defaultcontrol>
    <controls>
        <include>DimBG</include>
        <control type="group">
            <include>DialogOpenClose</include>
            <control type="image">
                <posx>260</posx>
                <posy>140</posy>
                <width>1400</width>
                <height>1080</height>
                <!--<include>DialogTransparency</include>-->
                <colordiffuse>$VAR[Picked.Theme.Color]</colordiffuse>
                <texture border="50">common/background_menu.png</texture>
            </control>
            <include name="WindowClosingButton">
                <param name="id" value="90010"/>
                <param name="x" value="1602"/>
                <param name="y" value="140"/>
                <param name="onleft" value="6060"/>
            </include>
            <control type="group">
                <posx>310</posx>
                <posy>240</posy>
                <control type="label">
                    <posx>TextMargin</posx>
                    <posy>0</posy>
                    <width>1200</width>
                    <height>50</height>
                    <font>InfoTitleFont</font>
                    <include>TextColor_MainColor</include>
                    <scroll>true</scroll>
                    <info>ListItem.Label</info>
                </control>
                <control type="list" id="450">
                    <posx>0</posx>
                    <posy>100</posy>
                    <width>1300</width>
                    <height>700</height>
                    <onleft>450</onleft>
                    <onright>60</onright>
                    <onup>450</onup>
                    <ondown>450</ondown>
                    <pagecontrol>60</pagecontrol>
                    <itemlayout width="1300" height="50">
                        <control type="label">
                            <posx>TextMargin</posx>
                            <height>50</height>
                            <width>1200</width>
                            <font>FacadeListMainFont</font>
                            <textcolor>NoFocusedColor</textcolor>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                    </itemlayout>
                    <focusedlayout width="1300" height="50">
                        <control type="group">
                            <include>ButtonWideFocusAnimation</include>
                            <control type="image">
                                <posx>0</posx>
                                <posy>0</posy>
                                <height>50</height>
                                <width>1300</width>
                                <colordiffuse>$VAR[Picked.Theme.Color]</colordiffuse>
                                <texture border="1">list/bg_facade_focus.png</texture>
                            </control>
                            <control type="label">
                                <posx>TextMargin</posx>
                                <height>50</height>
                                <width>1200</width>
                                <font>FacadeListMainFont</font>
                                <include>TextColor_MainColor</include>
                                <scroll>true</scroll>
                                <label>$INFO[ListItem.Label]</label>
                            </control>
                        </control>
                    </focusedlayout>
                </control>
                <control type="scrollbar" id="60">
                    <posx>1250</posx>
                    <posy>100</posy>
                    <height>700</height>
                    <onleft>450</onleft>
                    <onright>60</onright>
                    <include>VerticalScroller</include>
                </control>
            </control>
        </control>
    </controls>
</window>
