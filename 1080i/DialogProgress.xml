<?xml version="1.0" encoding="utf-8"?>
<window type="dialog">
    <defaultcontrol always="true">10</defaultcontrol>
    <controls>
        <include>DimBG</include>
        <control type="group">
            <include>DialogOpenClose</include>
            <control type="image">
                <posx>460</posx>
                <posy>430</posy>
                <width>1000</width>
                <height>1080</height>
                <!--<include>DialogTransparency</include>-->
                <colordiffuse>$VAR[Picked.Theme.Color]</colordiffuse>
                <texture border="50">common/background_menu.png</texture>
            </control>
            <include name="WindowClosingButton">
                <param name="id" value="9010"/>
                <param name="x" value="1410"/>
                <param name="y" value="430"/>
                <param name="onleft" value="6060"/>
            </include>
            <control type="label" id="100">
                <posx>560</posx>
                <posy>530</posy>
                <width>800</width>
                <height>50</height>
                <font>InfoTitleFont</font>
                <include>TextColor_MainColor</include>
                <scroll>true</scroll>
                <label>$INFO[Control.GetLabel(1),,   ]$INFO[System.Progressbar,,%]</label>
            </control>
            <control type="textbox" id="9">
                <posx>560</posx>
                <posy>630</posy>
                <width>800</width>
                <height>200</height>
                <label>-</label>
                <font>InfoDetailsFont</font>
                <textcolor>AlternateColor</textcolor>
                <pagecontrol>6060</pagecontrol>
            </control>
            <control type="scrollbar" id="6060">
                <visible>Skin.HasSetting(ManualScroll)</visible>
                <posx>1410</posx>
                <posy>630</posy>
                <height>200</height>
                <include>VerticalScroller</include>
                <onleft>10</onleft>
                <onright>10</onright>
            </control>
            <include name="ProgressBar">
                <param name="id" value="0"/>
                <param name="visible" value="true"/>
                <param name="x" value="510"/>
                <param name="y" value="880"/>
                <param name="width" value="900"/>
                <param name="height" value="50"/>
                <param name="texturebg" value="common/osd_progress_background.png"/>
                <param name="gfx" value="OSD/osd_progress_50.png"/>
                <param name="border" value="1,1,1,1"/>
                <param name="info" value="System.Progressbar"/>
            </include>
            <control type="grouplist">
                <posx>510</posx>
                <posy>980</posy>
                <width>1000</width>
                <height>50</height>
                <itemgap>0</itemgap>
                <aligny>bottom</aligny>
                <align>center</align>
                <orientation>vertical</orientation>
                <onup>6060</onup>
                <ondown>6060</ondown>
                <onleft>6060</onleft>
                <onright>6060</onright>
                <control type="button" id="10">
                    <include>ButtonFocusAnimation</include>
                    <label>$LOCALIZE[222]</label>
                    <width>900</width>
                    <include>LeftMenuButton</include>
                </control>
            </control>
            <control type="label" id="1">
                <description>fake heading label</description>
                <posx>3000</posx>
                <posy>40</posy>
                <height>40</height>
                <width>960</width>
                <include>TextColor_MainColor</include>
                <align>center</align>
                <font>-</font>
            </control>
        </control>
    </controls>
</window>
