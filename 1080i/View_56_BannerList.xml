    <include name="BannerList_Layout">
        <itemlayout height="150" width="910">
            <control type="group">
                <visible>![Container.Content(episodes)|Container.Content(seasons)]</visible>
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>910</width>
                    <height>150</height>
                    <colordiffuse>bbffffff</colordiffuse>
                    <texture background="true">$VAR[Banner]</texture>
                    <aspectratio>scale</aspectratio>
                </control>
            </control>
            <control type="label">
                <posx>TextMargin</posx>
                <height>150</height>
                <width>810</width>
                <font>FacadeListMainFont</font>
                <textcolor>NoFocusedColor</textcolor>
                <label>$VAR[BannerText]</label>
            </control>
            <include name="WatchedRecOverlay">
                <param name="x" value="0"/>
                <param name="y" value="0"/>
                <param name="width" value="50"/>
                <param name="height" value="150"/>
                <param name="colordiffuse" value="NoFocusedColor"/>
            </include>
        </itemlayout>
