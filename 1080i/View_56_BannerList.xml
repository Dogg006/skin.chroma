                    <posx>TextMargin</posx>
                    <height>150</height>
                    <width>810</width>
                    <font>FacadeListMainFont</font>
                    <include>TextColor_MainColor</include>
                    <scroll>true</scroll>
                    <label>$VAR[BannerText]</label>
                </control>
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>910</width>
                    <height>150</height>
                    <texture border="1">$VAR[Theme.Color]/list/bg_facade_focus_2.png</texture>
                </control>
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>50</width>
                    <height>150</height>
                    <texture>$VAR[Overlay]</texture>
                    <aspectratio aligny="center">keep</aspectratio>
