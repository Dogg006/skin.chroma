<?xml version="1.0" encoding="utf-8"?>
<addon id="skin.chroma" version="1.0.5" name="Chroma" provider-name="Tgx">
    <requires>
        <import addon="xbmc.gui" version="5.9.0"/>
        <import addon="script.grab.fanart" version="0.12.8"/>
        <import addon="script.favourites" version="3.2.0"/>
        <import addon="service.skin.widgets" version="0.0.27"/>
        <import addon="script.skinshortcuts" version="0.2.4"/>
    </requires>
    <extension point="xbmc.gui.skin" debugging="false">
        <res width="1920" height="1080" aspect="16:9" default="true" folder="1080i"/>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Full-featured modern skin designed for Full HD TV screens.</summary>
        <description lang="en">Full-featured modern skin designed for Full HD TV screens.</description>
        <disclaimer lang="en">This skin does not work on Apple Tv 2</disclaimer>
        <license>Creative Commons Attribution-ShareAlike 3.0 Unported License</license>
        <source>https://github.com/Tgxcorporation/skin.chroma</source>
        <website>https://github.com/Tgxcorporation/skin.chroma/wiki</website>
        <platform>all</platform>
    </extension>
</addon>
